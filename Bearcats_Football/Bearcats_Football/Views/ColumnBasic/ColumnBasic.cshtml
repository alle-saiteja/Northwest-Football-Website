@*You need to add a reference to jQuery prior to referencing the highcharts javascript file*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
@*You need to add a reference to jQuery prior to referencing the highcharts javascript file*@

<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>

@using Highsoft.Web.Mvc.Charts

@(Html.Highsoft().Highcharts(
        new Highcharts
        {
            ID = "RushingChart",
            Chart = new Highsoft.Web.Mvc.Charts.Chart
            {
                Width = 800,
                Height = 500
            },
            Title = new Title
            {
                Text = "Rushing data for " + @ViewData["playerName"].ToString().ToUpper() + " with different teams in year 2015"
            },
            Subtitle = new Subtitle
            {
                Text = ""
            },

            XAxis = new List<XAxis>
            {
                new XAxis
                {

                    Categories = @ViewData["opponents"] as List<String>
                }
            },
            YAxis = new List<YAxis>
            {
                new YAxis
                {
                    Min = 0,
                    Title = new YAxisTitle
                    {
                        Text = "Yards"
                    }
                }
            },
            Tooltip = new Tooltip
            {
                HeaderFormat = "<span style='font-size:10px'>{point.key}</span><table style='font-size:12px'>",
                PointFormat = "<tr><td style='color:{series.color};padding:0'>{series.name}: </td><td style='padding:0'><b>{point.y:.1f}&nbsp;yards</b></td></tr>",
                FooterFormat = "</table>",
                Shared = true,
                UseHTML = true
            },
            PlotOptions = new PlotOptions
            {
                Column = new PlotOptionsColumn
                {
                    PointPadding = 0.2,
                    BorderWidth = 0
                }
            },
            Series = new List<Series>
            {
                new ColumnSeries
                {
                    Name = "Rushing",
                    Data = @ViewData["yardRushData"] as List<ColumnSeriesData>
                },
                new ColumnSeries
                {
                    Name = "Receiving",
                    Data = @ViewData["yardReceiveData"] as List<ColumnSeriesData>
                }                
            }
        }
        , "chart")
)

